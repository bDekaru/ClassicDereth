root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{h,hpp}]
indent_style =  = tab
insert_final_newline = true;
trim_trailing_whitespace = true;

[*.cpp]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true;

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
